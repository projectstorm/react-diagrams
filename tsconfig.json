{
	"compileOnSave": false,
	"compilerOptions": {
		"suppressExcessPropertyErrors": true,
		"declaration": false,
		"outDir": "dist/@types",
		"strictNullChecks": false,
		"sourceMap": true,
		"skipLibCheck": true,
		"jsx": "react",
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"dom",
			"es6"
		]
	},
	"include": [
		"./src"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts",
		"./dist"
	]
}
